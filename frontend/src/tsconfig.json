{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "DOM"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "checkJs": false,
    "skipLibCheck": true,
    "allowJs": true,
    "types": [],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "vueCompilerOptions": {
    "strictTemplates": false,
    "experimentalCompatMode": 2
  },
  "include": [
    "pages/**/*.vue",
    "src/pages/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "unpackage",
    "dist",
    "**/*.config.js",
    "**/*.js",
    "main.js",
    "App.vue"
  ]
}

